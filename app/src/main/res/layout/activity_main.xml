<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="pl.dom3k.simplebroadcaster.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.032" />

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="460dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="43dp">

        <TextView
            android:id="@+id/content_provider_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="There will be data from ContentProvider." />

        <Button
            android:id="@+id/fetch_cursor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fetch cursor" />

        <Button
            android:id="@+id/next_cursor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Next in cursor" />

        <ImageView
            android:id="@+id/cat_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@android:drawable/alert_dark_frame" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
